# API Configuration
ANTHROPIC_API_KEY=your_key_here

# Model Configuration (using recommended model IDs to avoid errors)
MODEL_TECHLEAD=claude-3-opus-20240229
MODEL_RESEARCHER=claude-3-opus-20240229
MODEL_ARCHITECT=claude-3-opus-20240229
MODEL_PRODUCT_OWNER=claude-3-5-sonnet-20241022
MODEL_DATA_ENGINEER=claude-3-5-sonnet-20241022
MODEL_DATA_SCIENTIST=claude-3-5-sonnet-20241022
MODEL_BACKEND=claude-3-5-sonnet-20241022
MODEL_FRONTEND=claude-3-5-sonnet-20241022
MODEL_QA=claude-3-5-sonnet-20241022
MODEL_SELF_HEALING=claude-3-5-sonnet-20241022
MODEL_DELIVERY=claude-3-5-sonnet-20241022

# Application Configuration
BASE_URL=http://localhost:3000
LOG_LEVEL=INFO
MAX_RETRIES=3
RETRY_DELAY=2
PARALLEL_EXECUTION=true
MESSAGE_QUEUE_TYPE=filesystem  # or 'redis' for production

# Test Configuration
PLAYWRIGHT_HEADLESS=true
TEST_TIMEOUT=30000
SCREENSHOT_ON_FAILURE=true
HUMAN_LIKE_DELAYS=true
MIN_DELAY_MS=100
MAX_DELAY_MS=500

# Docker Configuration (optional)
DOCKER_ENABLED=false
DOCKER_REGISTRY=your-registry
CONTAINER_ORCHESTRATOR=docker-compose  # or 'kubernetes'

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces